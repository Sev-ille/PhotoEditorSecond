Display

<Display>:
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            size_hint: 1,.4
            rows: 4
            Input:
            id: pic
            Button:
                text:"Load Image"
                on_release: root.loadimage()
            Button:
                text: "Mirror"
            Button:
                text: "Inverse"
            Button:
                text: "Blue"
                on_release: root.blue_filter()
            Button:
                text: "Sepia"
            Button:
                text: "Red-Wash"
            Button:
                text: "Pixelate"

        Image:
            id: img
            source: ""